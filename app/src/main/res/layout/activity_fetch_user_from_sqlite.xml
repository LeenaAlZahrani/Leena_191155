<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE82EE"

    tools:context=".fetchUserFromSqlite">


    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch user from SQlite"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"



        />

    <EditText
        android:id="@+id/SQuseridSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/homeTitle"
        android:textSize="30sp"
        android:hint="Please Enter user id"

        />

    <Button
        android:id="@+id/SQFeatchbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SQuseridSearch"
        android:layout_centerHorizontal="true"
        android:onClick="SQgetuserActionSqlite"
        android:text="Fetch user" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SQFeatchbt"
        android:id="@+id/SQallValues"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SQffirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"

            android:text="TextView" />

        <TextView
            android:id="@+id/SQflastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"

            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQfphonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"

            android:text="TextView" />

        <TextView
            android:id="@+id/SQfemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"

            android:textStyle="bold"

            android:text="TextView" />
    </LinearLayout>




</RelativeLayout>