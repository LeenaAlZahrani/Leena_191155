<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE82EE"
    tools:context=".HomeSqlite">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/homeTitle"
        android:src="@drawable/sqlitelogo3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >


        <Button
            android:id="@+id/ftchsql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Fetch Specific User" />

        <Button
            android:id="@+id/sqlalll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Fetch All User with delete and update" />



        <Button
            android:id="@+id/sqladdallll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="addValuesFromFireTosqlaction"
            android:text="add All User from firebase to Sqlite" />
    </LinearLayout>


</RelativeLayout>